#!/bin/bash

set -e

case "$1" in
    purge)
        # Remove configuration file on purge
        rm -f /etc/micarray.conf
        
        # Remove log files
        rm -f /var/log/micarray.log*
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Do nothing for these cases
        ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
